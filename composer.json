{
    "name": "burst-statistics/burst-statistics",
    "description": "Self-hosted, privacy-friendly stats for WordPress. Simple interface, no setup. Get detailed analytics with Burst Statistics..",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "*",
        "yoast/phpunit-polyfills": "^2.0",
        "wp-cli/wp-cli-bundle": "^2.8",
        "phpunit/phpunit": "^9.6"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.2.28"
        }
    },
    "extra": {
        "installer-name": "burst-statistics"
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit --configuration phpunit.xml.dist"
    }
}